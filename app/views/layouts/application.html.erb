<!DOCTYPE html>
<html>
  <head>
    <title>Picshare</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag 'bulma' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="nav">
      <div class="nav_left">
        <h2 class="title"><%= link_to "PicShare", root_path %></h2>
      </div>
      <% if current_user %>
        <div class="nav-item">
          <%= link_to 'Log Out', :logout %>
        </div>
        <div class="nav-item">
          <%= current_user %>
        </div>      
      <% else %>
        <div class="nav-item">
          <%= link_to 'Log In', :login %>
        </div>
        <div class="nav-item">
          <%= link_to 'Sign Up', :signup %>
        </div>
      <% end %>  
    </nav>
    <p id="notice" style="color: green"><%= notice %></p>
    <p id="alert" style="color: red"><%= alert %></p>
    <%= yield %>  
  </body>
</html>
