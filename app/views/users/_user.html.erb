<div id="<%= dom_id user %>">
  <p>
    <strong>Username:</strong>
    <%= user.username %>
  </p>
  <% user.posts.each do |post| %>
    <p>
      <%= link_to image_tag(post.image.thumb.url, alt: 'Image') if post.image? %>
    </p>
    <p>
      <em><%= post.caption %></em>
      <strong> ~<%= link_to post.user, post.user %></strong>
    </p> 
  <% end %>
</div>
